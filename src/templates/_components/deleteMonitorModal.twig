<div id="delete-monitor-modal" class="upsnap-modal hidden">
  <div class="upsnap-modal__overlay"></div>
  <div class="upsnap-modal__container">
    <div class="upsnap-modal__header">
      <h2 class="upsnap-modal__title">{{ "Delete Monitor"|t('upsnap') }}</h2>
      <button type="button" class="upsnap-modal__close" aria-label="Close">&times;</button>
    </div>

    <div class="upsnap-modal__body">
      <p>{{ "Are you sure you want to delete this monitor URL? This action cannot be undone."|t('upsnap') }}</p>
    </div>

    <div class="upsnap-modal__footer">
      <button type="button" id="cancel-delete-monitor-btn" class="btn cancel">{{ "Cancel"|t('upsnap') }}</button>
      <button type="button" id="confirm-delete-monitor-btn" class="btn danger">{{ "Delete"|t('upsnap') }}</button>
    </div>
  </div>
</div>
