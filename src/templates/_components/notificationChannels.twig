{% include "upsnap/_components/addNotificationChannelModal.twig" %}

<div id="notification-channels-tab" class="tab-content hidden">
	<div
		id="integrations-page" class="integrations-container">
		{# Left Sidebar - Categories #}
		<aside class="integrations-sidebar">
			<nav class="integrations-nav">
				<button class="integrations-nav-item active" data-filter="my-integrations">
					My integrations
				</button>
				<button class="integrations-nav-item" data-filter="all">
					All
				</button>
				<button class="integrations-nav-item" data-filter="email">
					Email
				</button>
				<button class="integrations-nav-item" data-filter="chat">
					Chat platforms
				</button>
			</nav>
		</aside>

		{# Main Content Area #}
		<main
			class="integrations-main">
			{# Header with Search #}
			<header class="integrations-header">
				<div class="integrations-title-wrapper">
					<h1 class="integrations-title">Integrations</h1>
					<span class="integrations-usage" id="integration-usage">0/0 used</span>
				</div>

				<div class="integrations-search">
					<input type="text" class="text fullwidth" id="integration-search" placeholder="Search by integration type..." autocomplete="off">
				</div>
			</header>

			{# Integrations List #}
			<div
				class="integrations-list" id="integrations-list">
				{# Loading State #}
				<div class="integrations-loading" id="integrations-loading">
					<div class="spinner"></div>
					<p>Loading integrations...</p>
				</div>
				{# Integration items will be inserted here dynamically #}
			</div>
			{# Empty State #}
			<div class="integrations-empty hidden" id="integrations-empty">
				<h3>No integrations found.</h3>
				<p>Please add an integration to get started</p>
			</div>
		</main>
	</div>
</div>

{# Include JavaScript #}
{% js %}
document.addEventListener('DOMContentLoaded', function() {
        if (typeof window.IntegrationsManager !== 'undefined') {
            window.integrationsManager = new window.IntegrationsManager();
        }
    });
{% endjs %}
