{% extends '_layouts/cp' %}
{% import '_includes/forms' as forms %}
{% set crumbs = [
    { html: "<a href='" ~ url('upsnap') ~ "' class='thumb cp-icon'><svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 576 512' focusable='false' aria-hidden='true'><path d='M575.8 255.5c0 18-15 32.1-32 32.1l-32 0 .7 160.2c0 2.7-.2 5.4-.5 8.1l0 16.2c0 22.1-17.9 40-40 40l-16 0c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1L416 512l-24 0c-22.1 0-40-17.9-40-40l0-24 0-64c0-17.7-14.3-32-32-32l-64 0c-17.7 0-32 14.3-32 32l0 64 0 24c0 22.1-17.9 40-40 40l-24 0-31.9 0c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2l-16 0c-22.1 0-40-17.9-40-40l0-112c0-.9 0-1.9 .1-2.8l0-69.7-32 0c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z'></path></svg></a>" }
] %}

{% set tabs = {
	status: { label: 'Current Status', url: url('upsnap/reachability') },
} %}

{% block actionButton %}
	<div class="buttons">
		{% set hasRegions = monitorData and monitorData.regions and monitorData.regions|length > 0 %}
		<div class="btngroup select region-selector-group" {% if not hasRegions %}title="Register to check out region-based monitoring"{% endif %}>
			<select id="regionDropdown" class="{% if not hasRegions %} disabled{% endif %}" {% if not hasRegions %}disabled{% endif %}>
				{% if hasRegions %}
					{% for region in monitorData.regions %}
						<option value="{{ region.id }}" {% if region.is_primary %}selected{% endif %}>
							{{ region.name }}
						</option>
					{% endfor %}
				{% else %}
					<option value = "">Select Region</option>
				{% endif %}
			</select>
		</div>
		<div class="btngroup">
			<button type="button" class="btn submit" data-icon="refresh" id="refresh-btn">
				{{ 'Check Now'|t('upsnap') }}
			</button>
		</div>
	</div>
{% endblock %}

{% block content %}
	{% if success == 'warning' %}
		{% set statusClass = 'warning' %}
		{% set containerClass = 'warning' %}

		{% include 'upsnap/_components/status-container.twig' %}
	{% else %}

		{# Status container at full width #}
		<div id="status-container-wrapper" data-page="reachability">
			<div class="skeleton-card">
				<div class="skeleton-card-header">
					<div class="skeleton-line skeleton-line-medium"></div>
				</div>
				<div class="skeleton-card-body">
					<div class="skeleton-line skeleton-line-long"></div>
					<div class="skeleton-line skeleton-line-short"></div>
				</div>
			</div>
		</div>

		{% set hasRegions = monitorData and monitorData.regions and monitorData.regions|length > 0 %}

		{% if hasRegions %}
			{# Main content wrapper with 70/30 layout for details and region cards #}
			<div class="reachability-content-wrapper">
				{# Left side - 70% #}
				<div class="reachability-left-panel">
					{# Status container at full width #}
					<div id="reachability-section"></div>

					{# Response Time Chart Section #}
					<div id="response-time-chart-section" class="response-time-chart">
						<div class="card-header response-card-header">
							<span>Response Time</span>
							<select id="reachabilityResponseTimeFilter" class="response-time-filter">
								<option value="last_hour">Last Hour</option>
								<option value="last_24_hours">Last 24 Hours</option>
								<option value="last_7_days">Last 7 Days</option>
								<option value="last_30_days">Last 30 Days</option>
								<option value="last_90_days">Last 90 Days</option>
							</select>
						</div>
						<div class="response-chart-container">
							<div class="chart-loader hidden" id="reachabilityChartLoader"></div>
							<canvas id="reachabilityResponseChart"></canvas>
						</div>
						<div class="response-stats" id="reachabilityResponseStats">
							<div class="response-stat-box">
								<div class="stat-value" id="reachabilityAvgTime">–</div>
								<div class="stat-label">Avg. response time</div>
							</div>
							<div class="response-stat-box">
								<div class="stat-value" id="reachabilityMaxTime">–</div>
								<div class="stat-label">Max. response time</div>
							</div>
							<div class="response-stat-box">
								<div class="stat-value" id="reachabilityMinTime">–</div>
								<div class="stat-label">Min. response time</div>
							</div>
						</div>
					</div>
				</div>

				{# Right side - 30% #}
				<div class="reachability-right-panel">
					<div id="region-stats-container">
						<h3 class="region-stats-title">Response Time by Region</h3>
						<div id="region-cards-wrapper" class="region-cards-wrapper">
							{# Region cards will be populated via JavaScript #}
						</div>
					</div>
				</div>
			</div>
		{% else %}
			{# When no regions: Reachability details takes full width, no chart or region cards #}
			<div class="reachability-content-wrapper-full">
				<div id="reachability-section"></div>
			</div>
		{% endif %}
	{% endif %}

{% endblock %}

{% block foot %}
	<script
	src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.1/chart.umd.min.js"
	integrity="sha512-CQBWl4fJHWbryGE+Pc7UAxWMUMNMWzWxF4SQo9CgkJIN1kx6djDQZjh3Y8SZ1d+6I+1zze6Z7kHXO7q3UyZAWw=="
	crossorigin="anonymous">
	</script>
    <script>
        window.CraftPageData = {
            title: {{ title|json_encode|raw }},
            monitorUrl: {{ data.url|json_encode|raw }},
            monitorData: {{ monitorData|json_encode|raw }}
        };
    </script>
{% endblock %}